<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cardWard"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="0dp"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageView12"
            android:src="@drawable/img2"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Elon Musk"
            android:id="@+id/wardname"
            android:lines="1"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@+id/textViewClass"
            android:layout_alignStart="@+id/textViewClass" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ghana International School"
            android:id="@+id/school"
            android:lines="1"
            android:textSize="16sp"
            android:layout_below="@+id/wardname"
            android:layout_alignLeft="@+id/textViewClass"
            android:layout_alignStart="@+id/textViewClass" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Year 1"
            android:id="@+id/textViewClass"
            android:textSize="16sp"
            android:layout_below="@+id/school"
            android:layout_toRightOf="@+id/imageView12"
            android:layout_toEndOf="@+id/imageView12"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

    </RelativeLayout>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/booked"
        android:layout_margin="5dp"
        android:src="@drawable/books"
        android:layout_gravity="right|bottom"/>

</android.support.v7.widget.CardView>